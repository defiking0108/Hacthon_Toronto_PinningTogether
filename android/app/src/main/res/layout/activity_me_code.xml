<?xml version="1.0" encoding="utf-8"?>

<layout>
   <data>
       <variable
           name="viewModel"
           type="org.topnetwork.pintogether.ui.activity.vm.MeCodeActivityVm" />
   </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_200dp"
        android:layout_marginTop="@dimen/dimen_60dp"/>

    <TextView
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:text="保存二维码"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18sp"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen_68dp"
        android:layout_marginEnd="@dimen/dimen_68dp"
        android:layout_marginTop="@dimen/dimen_45dp"
        android:background="@drawable/bg_shape_r8_3665fd"/>

</LinearLayout>

</layout>