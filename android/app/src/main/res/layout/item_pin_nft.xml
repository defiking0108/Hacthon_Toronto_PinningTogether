<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@drawable/bg_shape_r16_f8f8f8"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_12dp">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        tool:text="213222323232"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintStart_toEndOf="@id/iv_pic"
        app:layout_constraintTop_toTopOf="@id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"/>

    <TextView
        android:id="@+id/tv_number"
        tool:text="213222323232"
        android:textColor="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintStart_toEndOf="@id/iv_pic"
        app:layout_constraintBottom_toBottomOf="@id/iv_pic"
        android:layout_marginStart="@dimen/dimen_12dp"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_pic"
        tool:text="2132232"
        android:textColor="#666666"
        android:drawableRight="@drawable/ic_pin_location"
        android:drawablePadding="@dimen/dimen_2dp"
        android:textSize="@dimen/text_size_12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>