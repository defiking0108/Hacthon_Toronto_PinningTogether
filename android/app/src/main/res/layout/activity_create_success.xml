<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="org.topnetwork.pintogether.ui.activity.vm.CreateSuccessActivityVm" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:src="@drawable/ic_receive_success"
            android:layout_marginTop="@dimen/dimen_100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建成功!"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/color_main_title"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_20dp"/>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_marginStart="@dimen/dimen_68dp"
            android:layout_marginEnd="@dimen/dimen_68dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:text="查看详情"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_shape_r8_3665fd"/>

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_marginStart="@dimen/dimen_68dp"
            android:layout_marginEnd="@dimen/dimen_68dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="关闭"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold"
            android:textColor="#3665fd"
            android:gravity="center"
            android:background="@drawable/bg_shape_r8_1_3665fd_white"/>
    </LinearLayout>
</layout>