<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="org.topnetwork.pintogether.ui.activity.vm.GetNftDetailActivityVm" />
    </data>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_12dp">

            <ImageView
                android:id="@+id/iv_pic"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:src="@drawable/ic_get_nft_holder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/color_main_title"/>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginBottom="@dimen/dimen_12dp"
            android:gravity="center"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_assist_title"/>

        <LinearLayout
            android:id="@+id/ll_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:gravity="center_vertical">

            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_main_title"
                android:text="编号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_no"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/color_main_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:id="@+id/line_no"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:gravity="center_vertical">
            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_main_title"
                android:text="分发量/发行量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_number"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/color_main_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:id="@+id/ll_creater"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:gravity="center_vertical">
            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_main_title"
                android:text="创建者"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_creater"
                android:textColor="@color/color_main_title"
                android:textSize="@dimen/text_size_15sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:singleLine="true"
                android:ellipsize="middle"
                android:layout_marginStart="@dimen/dimen_58dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_creater_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_get_nft_copy"/>
        </LinearLayout>

        <View
            android:id="@+id/line_creater"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_time_title"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_main_title"
                android:text="创建时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_time"
                android:textColor="@color/color_main_title"
                android:textSize="@dimen/text_size_15sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:gravity="center_vertical">
            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_main_title"
                android:text="领取地点"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_location"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/color_main_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="end"
                android:layout_marginStart="@dimen/dimen_58dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_get_nft_go"
                android:layout_marginStart="@dimen/dimen_4dp"/>

        </LinearLayout>

        <View
            android:id="@+id/line_location"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"/>

        <RelativeLayout
            android:id="@+id/rl_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到二维码"
                android:textColor="@color/color_main_title"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_get_nft_go"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dimen_4dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/line_code"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:id="@+id/ll_copy"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dimen_20dp">

            <TextView
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_main_title"
                android:text="交易hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_hash"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/color_main_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="middle"
                android:gravity="end"
                android:layout_marginStart="@dimen/dimen_58dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_get_nft_copy"
                android:layout_marginStart="@dimen/dimen_4dp"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
</layout>